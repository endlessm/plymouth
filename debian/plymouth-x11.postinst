#!/bin/sh

set -e

case "${1}" in
	configure|abort-upgrade|abort-remove|abort-deconfigure)
		if which update-initramfs >/dev/null 2>&1 && [ -e /etc/initramfs-tools/initramfs.conf ]; then
			update-initramfs -u
		fi
		;;

	*)
		echo "postinst called with unknown argument \`${1}'" >&2
		exit 1
		;;
esac

#DEBHELPER#

exit 0
